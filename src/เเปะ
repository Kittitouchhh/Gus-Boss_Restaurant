import { Routes, Route, useLocation } from "react-router-dom";

// üîπ Components
import Header from "./components/header"; // header ‡∏Ç‡∏≠‡∏á‡∏•‡∏π‡∏Å‡∏Ñ‡πâ‡∏≤
import HeaderAdmin from "./components/Admin/CrudAdmin/headerAdmin"; // header ‡∏Ç‡∏≠‡∏á‡πÅ‡∏≠‡∏î‡∏°‡∏¥‡∏ô
import Footer from "./components/footer"; // ‡πÉ‡∏ä‡πâ‡∏£‡πà‡∏ß‡∏°‡∏Å‡∏±‡∏ô

// üè† Client Pages
import HomeClient from    "./page/client/Home-Client";
import PostIt from        "./page/client/Post-It-Client";
import ProcessOrder from  "./page/client/Process-Client";
import Constact from      "./page/client/Constact-Client";

// ‚öôÔ∏è Admin Pages
import AdminPage from "./page/pagesAdmin/AdminPage";

export default function App() {
  const location = useLocation(); // ‡πÉ‡∏ä‡πâ‡∏î‡∏π path ‡∏õ‡∏±‡∏à‡∏à‡∏∏‡∏ö‡∏±‡∏ô
  const isAdmin = location.pathname.startsWith("/admin"); // ‡∏ñ‡πâ‡∏≤ URL ‡πÄ‡∏£‡∏¥‡πà‡∏°‡∏î‡πâ‡∏ß‡∏¢ /admin ‚Üí ‡∏ñ‡∏∑‡∏≠‡∏ß‡πà‡∏≤‡πÄ‡∏õ‡πá‡∏ô admin

  return (
    <div>
      {isAdmin ? <HeaderAdmin /> : <Header />}

      <Routes>
        {/* üîπ Client Pages */}
        <Route path="/" element={<HomeClient />} />
        <Route path="/process" element={<ProcessOrder />} />
        <Route path="/post-it" element={<PostIt />} />
        <Route path="/contact" element={<Constact />} />

        {/* üîπ Admin Pages */}
        <Route path="/admin" element={<AdminPage/>} />
        <Route path="/admin/edit" element={<AdminPage />} />
        <Route path="/admin/process" element={<ProcessOrder />} />
        <Route path="/admin/postit" element={<PostIt />} />
        <Route path="/admin/contact" element={<Constact />} />
      </Routes>

      <Footer />
    </div>
  );
}
